# M65832 Minimal Configuration
#
# This is a minimal configuration to get the kernel compiling.
# Many features are disabled for initial bring-up.

# Architecture
CONFIG_M65832=y
CONFIG_M65832_GENERIC=y
CONFIG_M65832_FPU=n

# General setup
CONFIG_LOCALVERSION="-m65832"
CONFIG_DEFAULT_HOSTNAME="m65832"
CONFIG_SYSVIPC=y
CONFIG_POSIX_MQUEUE=y
CONFIG_AUDIT=n
CONFIG_CGROUPS=n

# Memory
CONFIG_PAGE_OFFSET=0x80000000
CONFIG_PHYS_OFFSET=0x00000000
CONFIG_FLATMEM=y
CONFIG_FLAT_NODE_MEM_MAP=y

# Loadable module support
CONFIG_MODULES=n

# Block layer
CONFIG_BLOCK=y

# I/O Schedulers
CONFIG_MQ_IOSCHED_DEADLINE=y
CONFIG_MQ_IOSCHED_KYBER=n
CONFIG_IOSCHED_BFQ=n

# Processor type and features
CONFIG_HZ_100=y
CONFIG_HZ=100

# Executable file formats
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y

# Memory Management options
CONFIG_MMU=y
CONFIG_NEED_PAGE_INIT_CLEANUP=y

# Device Drivers
CONFIG_MTD=n
CONFIG_BLK_DEV=n
CONFIG_NETDEVICES=n
CONFIG_INPUT=n
CONFIG_VT=n
CONFIG_HW_RANDOM=n

# Character devices
CONFIG_SERIAL_EARLYCON=y
CONFIG_SERIAL_OF_PLATFORM=y

# File systems
CONFIG_EXT2_FS=n
CONFIG_EXT4_FS=n
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_TMPFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Kernel hacking
CONFIG_PRINTK=y
CONFIG_BUG=y
CONFIG_DEBUG_KERNEL=y
CONFIG_DEBUG_INFO=n
CONFIG_FRAME_POINTER=y
CONFIG_M65832_EARLY_PRINTK=y

# Security options
CONFIG_SECURITY=n

# Library routines
CONFIG_BITREVERSE=y
CONFIG_GENERIC_FIND_FIRST_BIT=y
